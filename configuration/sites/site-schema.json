{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$ref": "#/definitions/SiteConfiguration",
    "definitions": {
        "SiteConfiguration": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "site": {
                    "$ref": "#/definitions/Site"
                },
                "debug": {
                    "type": "boolean"
                },
                "allowedHosts": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "allowedApps": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "allowedHosts",
                "debug",
                "site"
            ],
            "title": "SiteConfiguration"
        },
        "Site": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "id": {
                    "type": "integer"
                },
                "name": {
                    "type": "string"
                },
                "verboseName": {
                    "type": "string"
                }
            },
            "required": [
                "id",
                "name",
                "verboseName"
            ],
            "title": "Site"
        }
    }
}